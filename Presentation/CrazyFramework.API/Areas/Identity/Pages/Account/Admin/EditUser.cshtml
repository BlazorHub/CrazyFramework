@page
@model EditUserModel
@{
	ViewData["Title"] = "Edit User";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
	<div class="row">

		<div class="col-md-8">

			<h4>User '@Model.Input.UserName'</h4>
			<hr />
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			<div class="form-group">
				<label asp-for="Input.Password"></label>
				<input asp-for="Input.Password" class="form-control" />
				<span asp-validation-for="Input.Password" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Input.ConfirmPassword"></label>
				<input asp-for="Input.ConfirmPassword" class="form-control" />
				<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
			</div>

			<input asp-for="Input.UserName" type="hidden" />
			<p class="font-italic text-info">Note: If you don't want to change password, don't input it.</p>
			<button type="submit" class="btn btn-primary">Update</button>
			<a class="btn btn-secondary" asp-area="Identity" asp-page="/Account/Admin/Users">Cancel</a>
		</div>
		<div class="col-md-4">
			<section>
				<h4>Roles</h4>
				<hr />

				@for (var i = 0; i < Model.Input.Roles.Count; i++)
				{
					<div class="form-group">
						<div class="checkbox">
							<input asp-for="Input.Roles[i].Name" type="hidden" />
							<label asp-for="Input.Roles[i].HasRole" class="clickable-label">
								<input asp-for="Input.Roles[i].HasRole" />
								@Model.Input.Roles[i].Name
							</label>
						</div>
					</div>
				}
			</section>
		</div>
	</div>
</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}