@page
@model CreateUserModel
@{
	ViewData["Title"] = "Create User";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
	<div class="row">

		<div class="col-md-6">

			<h4>User Infomation</h4>
			<hr />
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Input.Email"></label>
				<input asp-for="Input.Email" class="form-control" />
				<span asp-validation-for="Input.Email" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Input.Password"></label>
				<input asp-for="Input.Password" class="form-control" />
				<span asp-validation-for="Input.Password" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Input.ConfirmPassword"></label>
				<input asp-for="Input.ConfirmPassword" class="form-control" />
				<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
			</div>
			<button type="submit" class="btn btn-primary">Create</button>
			<a class="btn btn-secondary" asp-area="Identity" asp-page="/Account/Admin/Users">Cancel</a>
		</div>
		<div class="col-md-4 col-md-offset-2">
			<section>
				<h4>Roles</h4>
				<hr />

				@for (var i = 0; i < Model.Input.Roles.Count; i++)
				{
					<div class="form-group">
						<div class="checkbox">
							<input asp-for="Input.Roles[i].Name" type="hidden" />
							<label asp-for="Input.Roles[i].HasRole" class="clickable-label">
								<input asp-for="Input.Roles[i].HasRole" />
								@Model.Input.Roles[i].Name
							</label>
						</div>
					</div>
				}
			</section>
		</div>
	</div>
</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}