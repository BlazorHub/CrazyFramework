								<span aria-hidden="true">»</span>
							</PaginationLink>
						</PaginationItem>
					</Pagination>*@
			</CardBody>
		</Card>
	</Column>
</Row>

<AddOrUpdateProduct @ref="addOrUpdateModal" OnSuccessedCallback="LoadData" />
<DeleteProduct @ref="deleteModal" OnSuccessedCallback="LoadData" />

