@using Microsoft.AspNetCore.Components

<AuthorizeView Context="AuthorizeContext">
	<Authorized>
		<MatTooltip Tooltip="Log out">
			<MatIconButton Icon="exit_to_app" RefBack="@context" OnClick="LogoutClick"></MatIconButton>
		</MatTooltip>
	</Authorized>
	<NotAuthorized>
		<MatTooltip Tooltip="Log in">
			<MatIconButton Icon="account_box" RefBack="@context" Link="@Settings.LoginPath"></MatIconButton>
		</MatTooltip>
	</NotAuthorized>
</AuthorizeView>