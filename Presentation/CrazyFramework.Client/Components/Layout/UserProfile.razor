<AuthorizeView>
	<Authorized>
		<div class="drawer-profile">
			<a href="@Settings.ManageAccountPath"><MatIcon Icon="account_circle"></MatIcon></a>
			@*<MatIconButton Icon="account_circle" Link="@Settings.ManageAccountPath"></MatIconButton>*@
			@if (userInfo == null)
			{
				<div class="spinner-border spinner-border-sm" role="status"></div>
			}
			else
			{
				<span class="miniHover"><b><a href="@Settings.ManageAccountPath">@userInfo.UserName</a></b></span>
			}
		</div>
	</Authorized>
</AuthorizeView>